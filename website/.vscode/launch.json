{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "index.html",
            "type": "chrome",
            "request": "launch",
            "url": "file:///${workspaceRoot}/index.html",
            "runtimeArgs": [
                "--allow-file-access-from-files",
                "--disable-web-security"
            ],
            "webRoot": "${workspaceRoot}"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Compile MD",
            "program": "${workspaceFolder}/src-umd/util.js",
            "outFiles": [
                "${workspaceFolder}/src-umd/**/*.js"
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Gen Docs",
            "program": "${workspaceFolder}/src/index-node.ts",
            "cwd": "${workspaceFolder}",
            "outFiles": [
                "${workspaceFolder}/src-umd/**/*.js"
            ]
        }
    ]
}