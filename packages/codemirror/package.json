{
  "name": "@hpcc-js/codemirror",
  "version": "0.0.52",
  "description": "hpcc-js - Viz Code Mirror",
  "main": "build/codemirror.js",
  "module": "lib/index",
  "unpkg": "build/codemirror.min.js",
  "types": "lib/index.d.ts",
  "files": [
    "build/*",
    "lib/*",
    "src/*.css"
  ],
  "scripts": {
    "clean": "rimraf lib* && rimraf build",
    "compile": "tsc --module esnext --outDir ./lib",
    "compile-watch": "npm run compile -- -w",
    "compile-umd": "tsc",
    "bundle": "rollup -c",
    "bundle-watch": "npm run bundle -- -w",
    "minimize": "uglifyjs build/codemirror.js -c -m -o build/codemirror.min.js",
    "build": "npm run compile && npm run bundle",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-watch\"",
    "lint": "tslint --project . src/**/*.ts",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "@hpcc-js/codemirror-shim": "^0.0.39",
    "@hpcc-js/common": "^0.0.46",
    "@hpcc-js/ddl-shim": "^0.0.16",
    "@hpcc-js/dgrid": "^0.0.50",
    "@hpcc-js/html": "^0.0.46",
    "@hpcc-js/phosphor": "^0.0.48",
    "@hpcc-js/util": "^0.0.44",
    "tslib": "1.8.0"
  },
  "devDependencies": {
    "concurrently": "3.5.0",
    "rimraf": "2.6.1",
    "rollup": "0.51.3",
    "rollup-plugin-postcss": "0.5.5",
    "tslint": "5.8.0",
    "typedoc": "0.7.1",
    "typescript": "2.6.1",
    "uglify-js": "3.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}
