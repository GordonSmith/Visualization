{
    "compilerOptions": {
        "rootDir": "src",
        "module": "NodeNext",
        "target": "ESNext",
        "resolveJsonModule": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "declarationDir": "types",
        "strict": true,
        "skipLibCheck": true,
        "allowImportingTsExtensions": true,
        "noImplicitAny": false,
        "lib": [
            "DOM",
            "ESNext",
            "ES2020"
        ]
    },
    "include": [
        "./src/index.ts",
        "./src/ecl-lang/index.ts"
    ]
}