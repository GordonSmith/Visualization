{
  "name": "@hpcc-js/comms",
  "version": "0.0.58",
  "description": "hpcc-js - Communications",
  "main": "build/index.node.js",
  "module": "build/index.es6",
  "browser": "build/index.js",
  "unpkg": "build/index.min.js",
  "types": "lib-es6/index.d.ts",
  "files": [
    "lib/*",
    "lib-es6/*",
    "src/*.css",
    "build/*"
  ],
  "scripts": {
    "clean": "rimraf lib* && rimraf build",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle-browser-es6": "rollup -c -i lib-es6/index.js -f es -o build/index.es6.js",
    "bundle-browser-umd": "rollup -c -i lib-es6/index.js -f umd -o build/index.js",
    "bundle-browser-watch": "npm run bundle-browser -- -w",
    "bundle-node-es6": "rollup -c -i lib-es6/index.node.js -f cjs -o build/index.node.js",
    "bundle-node-watch": "npm run bundle-node -- -w",
    "bundle-es6": "npm run bundle-browser-es6 && npm run bundle-node-es6",
    "bundle-umd": "npm run bundle-browser-umd",
    "minimize-browser": "uglifyjs build/index.js -c -m --source-map  -o build/index.min.js",
    "minimize-node": "uglifyjs build/index.node.js -c -m --source-map  -o build/index.node.min.js",
    "minimize": "npm run minimize-browser && npm run minimize-node",
    "build": "npm run compile-es6 && npm run bundle-es6 && npm run bundle-umd",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-browser-watch\" \"npm run bundle-node-watch\"",
    "lint": "tslint --project . src/**/*.ts",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "@hpcc-js/util": "^0.0.52",
    "d3-request": "1.0.5",
    "d3-time-format": "2.1.0",
    "request": "2.81.0",
    "safe-buffer": "5.0.1",
    "tmp": "0.0.33",
    "tslib": "1.8.0",
    "xmldom": "0.1.27"
  },
  "devDependencies": {
    "@types/d3-request": "1.0.2",
    "@types/node": "8.0.51",
    "@types/request": "0.0.41",
    "@types/xmldom": "0.1.29",
    "concurrently": "3.5.0",
    "rimraf": "2.6.2",
    "rollup": "0.52.1",
    "rollup-plugin-alias": "1.4.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "tslint": "5.8.0",
    "typedoc": "0.7.1",
    "typescript": "2.6.1",
    "uglify-es": "3.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}
