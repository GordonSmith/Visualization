{
  "name": "@hpcc-js/ddl-shim",
  "version": "0.0.30",
  "description": "hpcc-js DDL parser",
  "main": "dist/index.js",
  "unpkg": "dist/index.min.js",
  "types": "types/index.d.ts",
  "files": [
    "dist/*",
    "types/*",
    "src/*.css"
  ],
  "scripts": {
    "clean": "rimraf ./src/ddl*Schema*.ts && rimraf lib* && rimraf dist",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-es6-watch": "npm run compile-es6 -- -w",
    "compile-util": "tsc -p ./tsconfig-util.json",
    "generate": "node ./lib-util/createSchema.js",
    "bundle": "webpack",
    "bundle-watch": "npm run bundle -- --watch",
    "build": "npm run compile-util && npm run generate && npm run compile-es6 && npm run bundle",
    "watch": "concurrently --kill-others \"npm run compile-es6-watch\" \"npm run bundle-watch\"",
    "lint": "tslint --project . src/**/*.ts",
    "docs": "typedoc --options tdoptions.json ."
  },
  "devDependencies": {
    "@types/node": "8.0.51",
    "ajv": "4.11.3",
    "concurrently": "3.5.0",
    "extract-text-webpack-plugin": "2.1.0",
    "reflect-metadata": "0.1.10",
    "rimraf": "2.6.2",
    "tslib": "1.8.0",
    "typescript-json-schema": "0.18.0",
    "webpack": "3.10.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}
