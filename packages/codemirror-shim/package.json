{
  "name": "@hpcc-js/codemirror-shim",
  "version": "0.0.38",
  "description": "hpcc-js - codemirror shim",
  "main": "build/codemirror-shim.js",
  "module": "lib/index",
  "types": "lib/index.d.ts",
  "files": [
    "build/*",
    "lib/*",
    "src/*.css"
  ],
  "scripts": {
    "clean": "rimraf lib && rimraf build",
    "compile": "tsc",
    "compile-watch": "tsc -w",
    "bundle": "rollup -c",
    "bundle-watch": "rollup -w -c",
    "minimize": "uglifyjs build/codemirror-shim.js -c -m -o build/codemirror-shim.min.js",
    "build": "npm run compile && npm run bundle",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-watch\"",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "codemirror": "5.26.0"
  },
  "devDependencies": {
    "concurrently": "3.5.0",
    "rimraf": "2.6.1",
    "rollup": "0.51.3",
    "rollup-plugin-alias": "1.4.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-postcss": "0.5.5",
    "rollup-plugin-sourcemaps": "0.4.2",
    "typescript": "2.6.1",
    "uglify-js": "3.1.8"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}