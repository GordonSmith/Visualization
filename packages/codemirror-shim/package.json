{
  "name": "@hpcc-js/codemirror-shim",
  "version": "0.0.46",
  "description": "hpcc-js - codemirror shim",
  "module": "build/codemirror-shim.es6",
  "types": "lib-es6/index.d.ts",
  "files": [
    "build/*",
    "lib/*",
    "src/*.css"
  ],
  "scripts": {
    "clean": "rimraf lib* && rimraf build",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle-es6": "rollup -c -f es -o build/codemirror-shim.es6.js",
    "bundle-umd": "rollup -c -f umd -o build/codemirror-shim.js",
    "bundle-watch": "npm run bundle-es6 -- -w",
    "build": "npm run compile-es6 && npm run bundle-es6 && npm run bundle-umd",
    "watch": "concurrently --kill-others \"npm run compile-watch\" \"npm run bundle-watch\"",
    "lint": "tslint --project . src/**/*.ts",
    "docs": "typedoc --options tdoptions.json ."
  },
  "dependencies": {
    "codemirror": "5.26.0"
  },
  "devDependencies": {
    "concurrently": "3.5.0",
    "rimraf": "2.6.2",
    "rollup": "0.52.1",
    "rollup-plugin-alias": "1.4.0",
    "rollup-plugin-commonjs": "8.2.6",
    "rollup-plugin-node-resolve": "3.0.0",
    "rollup-plugin-postcss": "0.5.5",
    "rollup-plugin-sourcemaps": "0.4.2",
    "tslint": "5.8.0",
    "typescript": "2.6.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hpcc-systems/Visualization.git"
  },
  "author": "Gordon Smith <gordonjsmith@gmail.com>",
  "contributors": [],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/hpcc-systems/Visualization/issues"
  },
  "homepage": "https://github.com/hpcc-systems/Visualization"
}
