    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Edge",
            "request": "launch",
            "type": "msedge",
            "url": "file:///${workspaceRoot}/test.html",
            "trace": true,
            "webRoot": "${workspaceRoot}/",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceRoot}/*",
                "webpack:///*": "/*"
            }
        },
        {
            "name": "Launch Edge WS",
            "request": "launch",
            "type": "msedge",
            "url": "http://localhost:8080/tests/test-util/test.html",
            "trace": true,
            "webRoot": "${workspaceRoot}/",
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceRoot}/*",
                "webpack:///*": "/*"
            }
        }
    ]
}