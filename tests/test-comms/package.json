{
  "private": true,
  "name": "@hpcc-js/test-comms",
  "dependencies": {
    "@hpcc-js/comms": "^2.9.1",
    "@hpcc-js/util": "^2.7.2",
    "chai": "4.2.0",
    "es6-promise": "4.2.8",
    "mocha": "5.2.0"
  },
  "devDependencies": {
    "@types/chai": "4.1.7",
    "@types/mocha": "5.2.7",
    "css-loader": "3.4.1",
    "file-loader": "5.0.2",
    "mocha-chrome": "2.0.0",
    "npm-run-all": "4.1.5",
    "rimraf": "2.6.3",
    "source-map-loader": "0.2.4",
    "style-loader": "1.1.2",
    "typescript": "3.6.4",
    "webpack": "4.41.5",
    "webpack-cli": "3.3.10"
  },
  "scripts": {
    "clean": "rimraf lib* types dist *.tsbuildinfo",
    "compile-es6": "tsc --target es5 --module es6 --outDir ./lib-es6",
    "compile-es6-watch": "npm run compile-es6 -- -w",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle": "webpack",
    "bundle-watch": "npm run bundle -- --watch",
    "watch": "npm-run-all compile-es6 -p compile-es6-watch bundle-watch",
    "build": "npm run compile-es6 && npm run compile-umd && npm run bundle",
    "test": "npm run test:node",
    "test:node": "./node_modules/.bin/mocha lib-umd/index.spec.js --exit --reporter spec",
    "test:chrome": "mocha-chrome --chrome-flags \"[\\\"--allow-file-access-from-files\\\"]\" ./test.html"
  }
}