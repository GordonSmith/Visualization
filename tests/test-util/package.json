{
  "private": true,
  "name": "@hpcc-js/test-util",
  "version": "0.0.50",
  "dependencies": {
    "@hpcc-js/util": "^0.0.66",
    "chai": "4.0.0",
    "es6-promise": "4.1.1",
    "mocha": "3.4.2"
  },
  "devDependencies": {
    "@types/chai": "3.5.2",
    "@types/mocha": "2.2.41",
    "css-loader": "0.26.1",
    "file-loader": "1.1.5",
    "mocha-chrome": "1.0.1",
    "rimraf": "2.6.2",
    "source-map-loader": "0.2.1",
    "typescript": "2.6.1",
    "webpack": "3.10.0"
  },
  "scripts": {
    "clean": "rimraf lib* && rimraf types && rimraf build",
    "compile-es6": "tsc --module es6 --outDir ./lib-es6",
    "compile-umd": "tsc --module umd --outDir ./lib-umd",
    "bundle-umd": "webpack",
    "build": "npm run compile-es6 && npm run compile-umd && npm run bundle-umd",
    "test": "npm run test:node && npm run test:chrome",
    "test:node": "./node_modules/.bin/mocha lib-umd/index.spec.js --reporter spec",
    "test:chrome": "mocha-chrome --chrome-flags \"[\\\"--allow-file-access-from-files\\\"]\" ./test.html"
  }
}
