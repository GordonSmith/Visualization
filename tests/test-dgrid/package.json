{
    "private": true,
    "name": "@hpcc-js/test-dgrid",
    "dependencies": {
        "@hpcc-js/common": "^2.62.0",
        "@hpcc-js/dgrid": "^2.25.0",
        "@hpcc-js/dgrid-shim": "^2.19.0",
        "chai": "4.3.6",
        "es6-promise": "4.2.8",
        "mocha": "5.2.0",
        "simulate-event": "1.4.0"
    },
    "devDependencies": {
        "@types/chai": "4.3.0",
        "@types/mocha": "5.2.7",
        "cpx": "1.5.0",
        "css-loader": "3.6.0",
        "file-loader": "5.1.0",
        "mocha-chrome": "2.2.0",
        "rimraf": "2.7.1",
        "source-map-loader": "0.2.4",
        "style-loader": "1.3.0",
        "typescript": "4.5.5",
        "webpack": "4.46.0",
        "webpack-cli": "3.3.12"
    },
    "scripts": {
        "clean": "rimraf lib* types dist *.tsbuildinfo",
        "copy-resources": "cpx ./node_modules/@hpcc-js/dgrid-shim/dist/dojo/resources/* ./dist/dojo/resources",
        "compile-es6": "tsc --module es6 --outDir ./lib-es6",
        "compile-es6-watch": "npm run compile-es6 -- -w",
        "bundle": "webpack",
        "bundle-watch": "npm run bundle -- -w",
        "watch": "npm run compile-es6-watch && npm run bundle-watch",
        "build": "npm run compile-es6 && npm run bundle && npm run copy-resources",
        "test": "mocha-chrome ./test.html",
        "update": "npx npm-check-updates -u -t minor"
    }
}