{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib-umd",
        "target": "es5",
        "module": "umd",
        "moduleResolution": "node",
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "./types",
        "declarationMap": true,
        "strict": true,
        // "noImplicitAny": false,
        "noEmitOnError": false,
        "noUnusedLocals": true,
        "strictNullChecks": false,
        "importHelpers": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable"
        ],
        "types": []
    },
    "include": [
        "./src/**/*"
    ]
}