{
    "compilerOptions": {
        "outDir": "./lib-umd",
        "target": "es5",
        "module": "es6",
        "moduleResolution": "node",
        "strict": true,
        "sourceMap": true,
        "declaration": true,
        "noEmitOnError": false,
        "strictNullChecks": true,
        "importHelpers": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "skipLibCheck": true,
        "lib": [
            "dom",
            "es5",
            "es2015.promise",
            "es2015.iterable"
        ],
        "types": []
    },
    "include": [
        "src/**/*"
    ]
}