{
  "name": "hpcc-js",
  "version": "2.0.0-dev",
  "description": "HPCC Visualization Framework",
  "scripts": {
    "uninstall": "lerna clean && rimraf ./node_modules",
    "install": "lerna bootstrap --hoist",
    "install2": "lerna bootstrap",
    "clean": "lerna run clean && rimraf ./lib*",
    "build": "lerna run build",
    "build:src": "lerna run build --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\"",
    "watch:src": "lerna exec --parallel --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc -w ",
    "build:src-amd": "lerna exec --parallel --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc --module amd --outDir ./lib-amd",
    "watch:src-amd": "lerna exec --parallel --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc -w --module amd --outDir ./lib-amd",
    "build:src-umd": "lerna exec --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc --module umd --outDir ./lib-umd",
    "build:src-es6": "lerna exec --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc --module es6 --outDir ./lib-es6",
    "build:all": "lerna exec --ignore \"@hpcc-js/test-*\" --ignore \"@hpcc-js/build-*\" --ignore \"@hpcc-js/sample-*\" -- tsc --module es6 --outDir ./lib-es6",
    "test": "lerna run test --scope \"@hpcc-js/test-*\"",
    "test:chrome": "lerna run test:chrome --scope \"@hpcc-js/test-*\"",
    "test:firefox": "lerna run test:firefox --scope \"@hpcc-js/test-*\"",
    "test:ie": "lerna run test:ie --concurrency 1 --scope \"@hpcc-js/test-*\"",
    "publish": "lerna publish -m \"Publish\"",
    "publishXXX": "npm run clean && npm run build:src && lerna publish -m \"Publish\"",
    "schema": "typescript-json-schema --noExtraProps --required ./src/marshaller/DDLApi.ts DDLSchema > ./src/marshaller/DDLSchema.json",
    "legacy-test": "gulp lint && gulp jscs && gulp unitTest && gulp build-all && gulp unitTestBuild && gulp unitTestBuildNonAMD"
  },
  "devDependencies": {
    "lerna": "^2.0.0-rc.5",
    "yarn": "^0.24.5"
  },
  "devDependenciesOld": {
    "async": "~1.5.0",
    "csso": "~1.7.1",
    "del": "~2.2.0",
    "gulp": "~3.9.1",
    "gulp-bump": "~2.0.1",
    "gulp-concat-css": "~2.2.0",
    "gulp-filter": "~3.0.1",
    "gulp-git": "~1.7.0",
    "gulp-jscs": "~3.0.2",
    "gulp-jshint": "^2.0.4",
    "gulp-minify-css": "~1.2.4",
    "gulp-mocha-phantomjs": "~0.11.0",
    "gulp-natural-sort": "~0.1.1",
    "gulp-replace": "~0.5.4",
    "gulp-requirejs": "~0.1.3",
    "gulp-tag-version": "~1.3.0",
    "gulp-util": "~3.0.7",
    "jshint": "~2.9.4",
    "jshint-stylish": "~2.1.0",
    "lerna": "^2.0.0-rc.5",
    "lodash": "~3.10.1",
    "node-dir": "~0.1.11",
    "require-css": "~0.1.8",
    "requirejs": "~2.2.0",
    "requirejs-plugins": "git://github.com/GordonSmith/requirejs-plugins.git#v1.0.3",
    "requirejs-text": "~2.0.12",
    "yargs": "~4.3.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hpcc-systems/Visualization"
  },
  "author": "HPCC Systems",
  "license": "Apache-2.0",
  "homepage": "https://github.com/hpcc-systems/Visualization"
}