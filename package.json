{
    "name": "@hpcc-js/viz",
    "version": "2.0.1",
    "description": "hpcc-js-viz - HPCC Systems Visualization Framework",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "module": "lib-es6/index",
    "jsnext": "lib-es6/index.js",
    "browser": "lib-browser/index.js",
    "files": [
        "lib/**/*.d.ts",
        "lib/**/*.js",
        "lib-es6/**/*.d.ts",
        "lib-es6/**/*.js"
    ],
    "directories": {
        "lib": "lib/"
    },
    "scripts": {
        "clean": "rimraf lib && rimraf umd && rimraf tmp && rimraf coverage && rimraf .nyc_output && mkdir lib",
        "copy-resources": "cpx src/**/*.css tmp/src && cpx src/**/*.css lib-umd/",
        "copy-resources-test": "cpx src/**/*.css tmp/lib-test/src",
        "compile": "tsc -p ./tsconfig.json && npm run copy-resources",
        "compile-test": "tsc -p ./tsconfig-test.json && npm run copy-resources-test",
        "bundle-browser": "cross-env RUNTIME=browser BUILD=src rollup -c",
        "bundle-browser-min": "cross-env RUNTIME=browser BUILD=src PACKAGE=min rollup -c",
        "bundle-test": "cross-env RUNTIME=browser BUILD=test rollup -c",
        "build-browser": "npm run bundle-browser && npm run bundle-browser-min",
        "build": "npm run compile && npm run build-browser",
        "watch": "cross-env RUNTIME=browser BUILD=src rollup -w -c",
        "watch-test": "npm run copy-resources-test && cross-env RUNTIME=browser BUILD=test rollup -w -c",
        "prepublish": "npm run clean && npm run build",
        "lint": "tslint ./src/**/*",
        "test": "mocha ./lib-test/test/index.js",
        "pretest": "npm run lint && npm run build-test",
        "coverage": "nyc --reporter=html npm test",
        "doc": "typedoc --out ./docx/ --tsconfig ./tsconfig.json --exclude node_modules --excludeNotExported --ignoreCompilerErrors src"
    },
    "dependencies": {
        "colorbrewer": "^1.0.0",
        "d3-axis": "^1.0.5",
        "d3-brush": "^1.0.3",
        "d3-bullet": "^1.0.0",
        "d3-collection": "^1.0.2",
        "d3-drag": "^1.0.3",
        "d3-dsv": "^1.0.4",
        "d3-hexbin": "^0.2.1",
        "d3-hierarchy": "^1.1.4",
        "d3-sankey": "^0.4.2",
        "d3-scale": "^1.0.4",
        "d3-selection": "^1.0.4",
        "d3-shape": "^1.0.5",
        "d3-tip": "GordonSmith/d3-tip#vJSNEXT",
        "d3-zoom": "^1.1.2",
        "preact": "~8.1.0",
        "dagre": "^0.7.4",
        "es6-promise": "^4.0.5",
        "font-awesome": "^4.7.0",
        "grid-list": "^0.4.0",
        "tslib": "^1.6.0"
    },
    "devDependencies": {
        "@types/chai": "^3.4.35",
        "@types/d3": "^4.7.0",
        "@types/dagre": "^0.7.33",
        "@types/graphlib": "^2.1.4",
        "@types/mocha": "^2.2.40",
        "chai": "^3.5.0",
        "cpx": "^1.5.0",
        "cross-env": "^3.1.4",
        "css-loader": "^0.27.1",
        "file-loader": "^0.10.1",
        "mocha": "^3.2.0",
        "nyc": "^10.1.2",
        "rimraf": "^2.6.1",
        "rollup": "^0.41.5",
        "rollup-plugin-alias": "^1.2.1",
        "rollup-plugin-commonjs": "^8.0.2",
        "rollup-plugin-css-only": "^0.2.0",
        "rollup-plugin-node-resolve": "^2.0.0",
        "rollup-plugin-sourcemaps": "^0.4.1",
        "rollup-plugin-uglify": "^1.0.1",
        "rollup-plugin-visualizer": "^0.2.0",
        "rollup-watch": "^3.2.2",
        "tslint": "^4.4.2",
        "typedoc": "^0.5.7",
        "typescript": "^2.2.1",
        "url-loader": "^0.5.8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/hpcc-systems/Visualization.git"
    },
    "author": "Gordon Smith <gordonjsmith@gmail.com>",
    "contributors": [],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/hpcc-systems/Visualization/issues"
    },
    "homepage": "https://github.com/hpcc-systems/Visualization"
}